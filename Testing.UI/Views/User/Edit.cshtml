@model Testing.BLL.ViewModels.UserModel

@{
    ViewBag.Title = "Edit";
}

<section class="d-flex justify-content-around bg-primary">

    <div class="text-light w-25 d-flex flex-column justify-content-center">
        <h1 class="text-center">
            <i class="fa fa-user-circle" aria-hidden="true"></i>
        </h1>
        <h1 class="text-center">
            Welcome Admin
        </h1> <br>
        <h4 class="text-center">Online User Portal <i class="fa fa-users" aria-hidden="true"></i> </h4>
        <a href="/Authentication/Logout" class="w-25 mx-auto mt-3 btn btn-dark shadow">Logout</a>
    </div>

    <div class="bg-light w-75 shadow-lg ml-auto p-5 text-dark shadow-lg" style="height:100vh;overflow-y:scroll;z-index:99">
        <div class="m-0 row">
            <h4 class="px-2 mt-1 text-primary" style="vertical-align:middle">Update User</h4>
            <a href="/User/Index/" class="btn btn-primary shadow"> < Back to List</a>
        </div>

        <hr />

        <form action="~/User/Edit/" method="post">
            <div class="form-group">
                <label>Name</label>
                <input type="text"
                       name="Name"
                       value="@Model.Name"
                       id="Name"
                       required
                       class="form-control border-0 shadow"
                       placeholder="Frank Sinatra">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email"
                       class="form-control border-0 shadow"
                       value="@Model.Email"
                       id="Email"
                       required
                       name="Email"
                       placeholder="somemail@mail.com" />
            </div>
            <div class="form-group">
                <label>Phone No</label>
                <input type="tel"
                       maxlength="10"
                       minlength="10"
                       required
                       value="@Model.Phone"
                       class="form-control border-0 shadow"
                       id="Phone"
                       name="Phone"
                       placeholder="9898323289" />
            </div>
            <div class="form-group">
                <label>Birthdate</label>
                <input type="date"
                       class="form-control border-0 shadow"
                       id="Birthdate"
                       required
                       value="@Model.Birthdate.ToString("yyyy-MM-dd")"
                       name="Birthdate" />
            </div>
            <div class="form-group col-3 pl-0">
                <div class="d-flex justify-content-between">
                    <div class="custom-control custom-radio">
                        @if (Model.Gender) {
                            <input class="custom-control-input" type="radio" id="Male" name="Gender" checked value="true">
                        } else {
                            <input class="custom-control-input" type="radio" id="Male" name="Gender" value="true">
                        }
                        <label class="custom-control-label" for="Male">Male</label><br>
                    </div>
                    <div class="custom-control custom-radio">
                        @if (Model.Gender) {
                            <input class="custom-control-input" type="radio" id="Female" name="Gender" value="false">
                        } else {
                            <input class="custom-control-input" type="radio" id="Female" name="Gender" checked value="false">
                        }
                        <label class="custom-control-label" for="Female">Female</label><br>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="hidden"
                       value="@Model.UserId"
                       name="UserId"
                       id="UserId" />
                <input type="Submit"
                       class="form-control btn btn-primary"
                       name="Submit"
                       value="Update" />
            </div>
        </form>

    </div>

</section>