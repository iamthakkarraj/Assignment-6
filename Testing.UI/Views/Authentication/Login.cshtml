@model Testing.BLL.ViewModels.LoginModel

@{
    ViewBag.Title = "Login";
}

<section class="d-flex" style="height:100vh;">

    <div class="w-25 bg-primary text-light">
        <div class="d-flex h-100 flex-column justify-content-center">
            <div class="mx-auto">
                <h1 class="text-center">
                    <i class="fa fa-shield" aria-hidden="true"></i>
                </h1>
                <h1>
                    Admin Login
                </h1>
                <p class="text-center">
                    <i class="fa fa-users" aria-hidden="true"></i>
                    User Database Portal
                </p>
            </div>
        </div>
    </div>

    <div class="w-75 bg-light shadow-lg d-flex flex-column justify-content-center p-5">

        <form action="~/Authentication/Login" method="post">

            <div class="form-group col-4">
                <label>User Name</label>
                <input type="text"
                       name="Username"
                       id="Username"
                       class="form-control border-0 shadow"
                       required
                       placeholder="User Name">
            </div>

            <div class="form-group col-4">
                <label>Password</label>
                <input type="password"
                       class="form-control border-0 shadow"
                       id="Password"
                       name="Password"
                       required
                       placeholder="Password">
            </div>

            <div class="form-group col-4">
                <input type="Submit"
                       class="form-control btn btn-primary"
                       name="Submit"
                       value="Login" />
            </div>

            <div class="form-group col-4">
                <p class="text-primaform-control text-center">Don't have an account ? <br> <a href="~/Authentication/SignUp">Sign Up</a></p>
            </div>

        </form>

    </div>

</section>